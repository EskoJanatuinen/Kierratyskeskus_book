{
  "name": "kierratyskeskus_books",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "axios": "^0.18.0",
    "clipboard-copy": "^2.0.1",
    "electron-is-dev": "^1.0.1",
    "react": "^16.6.3",
    "react-barcode": "^1.3.4",
    "react-barcode-reader": "0.0.1",
    "react-bootstrap": "^0.32.4",
    "react-cloud-vision-api": "^0.3.0",
    "react-dom": "^16.6.3",
    "react-html-parser": "^2.0.2",
    "react-redux": "^6.0.0",
    "react-scripts": "^2.1.3",
    "react-toastify": "^4.5.1",
    "react-webcam": "^1.1.0",
    "redux": "^4.0.1",
    "redux-promise": "^0.6.0",
    "redux-thunk": "^2.3.0"
  },
  "main": "public/electron.js",
  "homepage": "./",
  "scripts": {
